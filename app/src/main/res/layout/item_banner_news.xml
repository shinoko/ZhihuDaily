<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/banner_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_banner"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@color/cyan_light"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:failureImage="@drawable/default_banner"
        fresco:failureImageScaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/banner_shadow_mask" />

    <TextView
        android:id="@+id/banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/banner_image"
        android:layout_marginBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="14dp"
        android:gravity="bottom"
        android:text="banner标题标题标题标题标题标题标题标题标题标题标题！"
        android:textColor="@color/white"
        android:textSize="@dimen/news_title_textsize"
        android:textAlignment="gravity"
        />

</RelativeLayout>
