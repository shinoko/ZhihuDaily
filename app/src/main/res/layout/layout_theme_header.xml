<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/theme_header_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_banner_height"
        android:src="@drawable/default_banner"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@color/cyan_light"
        fresco:placeholderImageScaleType="centerCrop"
        />

    <TextView
        android:id="@+id/theme_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/theme_header_image"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题"
        android:textSize="@dimen/news_title_textsize"
        android:textColor="@color/white"
        />

</RelativeLayout>