<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/banner_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_banner_height" />

    <LinearLayout
        android:id="@+id/ll_dot_group_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/banner_viewpager"
        android:layout_gravity="center|center_vertical|center_horizontal|bottom"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_dot_group"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal" />

    </LinearLayout>

</RelativeLayout>
